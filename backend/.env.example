# Server Configuration
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=telegram_signals_marketplace
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# WebAuthn Configuration
WEBAUTHN_RP_NAME=Telegram Signals Marketplace
WEBAUTHN_RP_ID=localhost
WEBAUTHN_ORIGIN=http://localhost:3000

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/telegram/webhook

# Blockchain Configuration - BNB Chain
BNB_CHAIN_RPC_URL=https://bsc-dataseed.binance.org/
BNB_CHAIN_WS_URL=wss://bsc-ws-node.nariox.org:443
BSCSCAN_API_KEY=your-bscscan-api-key

# Blockchain Configuration - Bitcoin
BITCOIN_RPC_URL=https://bitcoin-node.example.com
BITCOIN_RPC_USER=bitcoin
BITCOIN_RPC_PASSWORD=bitcoin

# Blockchain Configuration - TRON
TRON_API_URL=https://api.trongrid.io
TRON_API_KEY=your-trongrid-api-key

# HD Wallet Configuration
WALLET_MASTER_SEED=your-master-seed-encrypted-in-kms
WALLET_DERIVATION_PATH=m/44'/60'/0'/0

# AWS Configuration
AWS_REGION=us-east-1
AWS_KMS_KEY_ID=your-kms-key-id

# SQS Queue Configuration
BOT_OPERATIONS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/bot-operations
BOT_OPERATIONS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789/bot-operations-dlq
AWS_SQS_BLOCKCHAIN_EVENTS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/blockchain-events
AWS_SQS_NOTIFICATIONS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789/notifications
AWS_SQS_NOTIFICATIONS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/123456789/notifications-dlq

# Scheduler Configuration
BOT_ADMIN_VERIFICATION_CRON=0 2 * * *
TZ=UTC
RUN_ON_STARTUP=false

# LocalStack Configuration (for local development)
USE_LOCALSTACK=false
SQS_ENDPOINT=http://localhost:4566

# Platform Configuration
PLATFORM_FEE_PERCENTAGE=5
MIN_PAYOUT_BNB=0.01
MIN_PAYOUT_USDT=10
MIN_PAYOUT_USDC=10
MIN_PAYOUT_BTC=0.001
ORDER_EXPIRY_HOURS=24
PAYMENT_TOLERANCE_PERCENTAGE=0.1

# Confirmation Requirements
BNB_CHAIN_CONFIRMATIONS=12
BITCOIN_CONFIRMATIONS=3
TRON_CONFIRMATIONS=19

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Email Configuration (AWS SES)
AWS_SES_REGION=us-east-1
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SUPPORT=support@yourdomain.com

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
USE_ELASTICSEARCH=true
